include templates/_vars.pug
include mixins/mixins.pug

- let pageTitle = 'Liarch - Architecture & Interior HTML Template - News';
- let isHome = true; //- Если true то логотип не будет ссылкой

html.no-js(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1")
		+fonts(FONTS)
		// CSS
		link(rel='apple-touch-icon' sizes='60x60' href='favicons/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='favicons/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='favicons/favicon-16x16.png')
		link(rel='manifest' href='favicons/site.webmanifest')
		link(rel='mask-icon' href='favicons/safari-pinned-tab.svg' color='#5bbad5')
		meta(name='msapplication-TileColor' content='#da532c')
		meta(name='theme-color' content='#ffffff')
		link(rel="stylesheet", href="css/fonts.css")
		link(rel="stylesheet", href="css/main.css")
		title= pageTitle

	body
		div(style="display: none")
			include ../../build/img/sprite.svg

		article.launch-page(style='background-image: url("img/bg-launch.jpg")')
			.container.launch-page__container
				.launch-page__wrapper
					+logo(isHome, 'launch-page__logo')
					.launch-page__title Coming Soon...
					.launch-page__subtitle Condimentum ipsum a adipiscing hac dolor set consectetur urna commodo elit parturient
																|  a molestie ut nisl partu convallier ullamcorpe.
					.launch-page__timer-title our website we be launched in:

					include modules/timer

					// Social
					ul.social.launch-page__social
						li.social__item
							a.social__link(href="#", target="_blank")
								+icon('twitter')(width="18", height="18", aria-label="twitter icon")
								span.visually-hidden Twitter
						li.social__item
							a.social__link(href="#", target="_blank")
								+icon('facebook')(width="18", height="18", aria-label="facebook icon")
								span.visually-hidden Facebook
						li.social__item
							a.social__link(href="#", target="_blank")
								+icon('instagram')(width="18", height="18", aria-label="instagram icon")
								span.visually-hidden Instagram
						li.social__item
							a.social__link(href="#", target="_blank")
								+icon('pinterest')(width="18", height="18", aria-label="pinterest icon")
								span.visually-hidden Pinterest


		// Optional JavaScript
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")

		// JavaScript
		script(src="js/timer.js")
