mixin work-card-4(image, tags, heading)
	li.works__item.work-card.work-card--grid&attributes(attributes)
		a.work-card__image(href="#")
			img(src="img/works-3/" + image, width="827", height= "685", alt="")
		.work-card__content
			.work-card__content-wrapper
				.work-card__tags= tags
				h2.work-card__heading
					a= heading
			.work-card__button
				+icon('arrow-long')
