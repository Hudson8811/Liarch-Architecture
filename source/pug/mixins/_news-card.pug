mixin news-card(image, num, month, year, title, tag, author)
	li.news-card.col-12.col-md-6&attributes(attributes)
		.news-card__pic
			img(src='img/news/' + image, alt="")
		.news-card__content
			.news-card__date
				p.num= num
				p.month= month
				p.year= year
			.news-card__title
				a(href='#')= title
				p.author= tag
					span.delimiter /
					span= author
