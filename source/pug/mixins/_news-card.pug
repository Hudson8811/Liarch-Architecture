mixin news-card(image, num, month, year, title, tag, author)
	li.news-card.__js_news-list-item.col-12.col-md-6&attributes(attributes)
		.news-card__pic
			img(src='img/news/' + image, alt="")
		.news-card__content
			.news-card__date
				p.num= num
				p.month= month
				p.year= year
			.news-card__title
				a(href='single-post.html', target='_blank')= title
				p.author
					a(href='#', target='_blank')= tag
					span.delimiter /
					span= author
