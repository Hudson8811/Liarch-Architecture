mixin logo(isHome, cl)
  if (isHome)
    a(class= cl + " logo")
      span.logo__image
        +icon('logo')(width="52", height="52", aria-label="logo")
      span.logo__text Liarch architecture studio
  else
    a(class= cl + " logo animsition-link", href="homepage.html")
      span.logo__image
        +icon('logo')(width="52", height="52", aria-label="logo")
      span.logo__text Liarch architecture studio



