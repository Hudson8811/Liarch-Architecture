// Form
form.form.js-form-validate(action='php/mail.php', method='POST', data-aos="fade")
	.form__title Ready to get started
	.form__subtitle Ask away! Our supporters will response within 24 hours
	.form__group
		.form__item
			label.form__field.field
				input(type='text', name='name', placeholder='Full Name')
				span.field__hint Full Name
				.underline
			.field-error(style='display: none')
		.form__item
			label.form__field.field
				input(type='email', name='email', placeholder='Email Address *', required)
				span.field__hint Email Address <span class="red">*</span>
				.underline
			.field-error(style='display: none')
		.form__item
			label.form__field.field
				input(type='text', name='subject', placeholder='Subject')
				span.field__hint Subject
				.underline
			.field-error(style='display: none')
	label.form__field.form__field--width-full.form__field--textarea.field
		textarea(name='message', placeholder='Your message here')
		span.field__hint Your message here
		.underline
	.field-error(style='display: none')
	button.form__submit(type='submit') Send Message
