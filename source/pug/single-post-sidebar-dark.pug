							.sidebar__categories-item
								.sidebar__categories-name reviews
								.sidebar__categories-num 5
							.sidebar__categories-item
								.sidebar__categories-name tips & tricks
								.sidebar__categories-num 1
							.sidebar__categories-item
								.sidebar__categories-name others
								.sidebar__categories-num 5
					a.sidebar__ads(href='#', target='_blank')
						img(src="img/post/sidebar-ads.jpg", alt="")


